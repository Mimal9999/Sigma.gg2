<Application
    x:Class="Sigma.gg.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="MainWindowBackgroudBrush"
                   Color="Orange" />
            <SolidColorBrush x:Key="WinColor"
                    Color="#5460FD" />
            <SolidColorBrush x:Key="LoseColor"
                    Color="#FD5471" />
            <SolidColorBrush x:Key="MvpColor"
                    Color="Orange" />
            <SolidColorBrush x:Key="AceColor"
                    Color="Magenta" />
            <SolidColorBrush x:Key="OtherColor"
                    Color="DimGray" />
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
